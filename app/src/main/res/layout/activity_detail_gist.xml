<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:context="br.com.barbosa.rodrigo.testgit.activity.ui.activity.DetailGistActivity">


        <ImageView
            android:id="@+id/imvAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_avatar" />


        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Titulo: Hahahahahaha"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome: Hahahahahaha"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvIdioma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Linguagem: Hahahahahaha"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/tvVerArquivo"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver arquivo"
            android:textAlignment="center" />




    </LinearLayout>
</ScrollView>